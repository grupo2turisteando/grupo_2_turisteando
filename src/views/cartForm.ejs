<%- include('./partials/head') %>

<body>

<%- include('./partials/header') %>

    <main>
        <section class="pasajeros">
            <div >
                <h4>¿Quiénes viajan?</h4>
            </div>
                <div class="datosPasajeros">
            <article class="cantidadPasajeros">
                <form action="/cart/pagar" method="post">
                    <label for="mayores">Mayores:</label>
                    <select name="mayores" id="">
                        <option value="1">1</option> 
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="#">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                </form>
            
                <form action="/cart/pagar" method="post">
                    <label for="menores">Menores:</label>
                    <select name="menores" id="">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="#">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                    
                </form>
            </article>
            
            <article >
                <form action="/cart/pagar" method="post">
                <div >
                    <label for="first_name"> Nombre:</label>
                    <input type="text" name="first_name" id="txtfirst_name" placeholder="Juan Pablo" required>
                </div>
                <div >
                    <label for="last_name"> Apellido:</label>
                    <input type="text" name="last_name" id="txtlast_name" placeholder="Perez" required>
                </div>
                <div>
                    <label for="birth_date">Fecha Nacimiento:</label>
                    <input type="date" name="birth_date" id="txbirth_date" required>
                </div>
                <div>
                    <label for="age">Edad:</label>
                    <input type="number" name="age" id="txage" required>
                </div>
                <div>
                    <label for="identity_document">Nro. Documento:</label>
                    <input type="number" name="identity_document" id="txidentity_document" placeholder="23485265" maxlength="8" required>
                </div>
                <div>
                    <label for="home">Domicilio:</label>
                    <input type="text" name="home" id="txdhome" placeholder="Florida 2365" required>
                </div>
                <div>
                    <label for="province">Provincia:</label>
                    <input type="text" name="province" id="txprovince" placeholder="Tucumán" required>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="txemail" placeholder="soledad@gmail.com" required maxlength="20">
                </div>
                <div>
                    <label for="phone_number">Nro. Contacto:</label>
                    <input type="tel" name="phone_number" id="txphone_number" placeholder="381456987" required minlength="9">
                </div>
            </div>
            </form>
            </article>
        </section>

        <section class="pago">
            <div>
                <h4>¿Cómo querés pagar?</h4>
            </div>

            <div >
            <article class="medioPago">
                    <div class="datosPago">
                        <form action="cart/pagar" method="post" required>
                            <label for="payment_method">Tarjeta débito</label>
                            <input type="radio" name="payment_method" value="debito">
                            <label for="payment_method">Tarjeta crédito</label>     
                            <input type="radio" name="payment_method" value="tarjeta">
                        </form>
                    </div>
                        
            </article>
            

            <article class="pagoTarjeta"> 
                
                    <div>
                        <form action="cart/pagar" method="post">
                            <label for="card_number">Nro de tarjeta</label>
                            <input type="number" name="card_number" id="txcard_number" placeholder="ingrese nro" required>
                    </div>
                    <div>
                            <label for="name_card_holder">Titular tarjeta</label>
                            <input type="text" name="name_card_holder" id="txname_card_holder" placeholder="como figura en su tarjeta" required>
                    </div>
                    <div>
                            <label for="expiration">Vencimiento</label>
                            <input type="number" name="expiration" id="txexpiration" placeholder="10/24" required minlength="4">
                    </div>
                    <div>
                            <label for="security_code">Código seguridad</label>
                            <input type="number" name="security_code" id="txsecurity_code" placeholder="5684 6589 6244 1254" minlength="3" maxlength="5" required>
                    </div>
                        </form>
            
            </article>
            </div>
        
            <form action="cart/pagar" method="post" class="bottonForm">
                <a href="/cart/cartFinal"><button class= "botonForm" type="submit" value="submit" form="cartFinal">Pagar</button></a>
                    <button class="botonForm" type="reset" >Borrar</button>
            </form>
    </section>
        
    </main>
    
    <%- include('./partials/footer') %>
    
</body>
</html>